<?xml version="1.0" encoding="utf-8" ?>
<odoo>
   <record id="crm_case_form_view_oppor_inherit_product" model="ir.ui.view">
        <field name="name">crm.lead.oppor.inherited</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">

            <!-- Hiding some fields that will be replaced partially or just set to invisible -->

            <xpath expr="//page[@name='lead']" position="after">
                <page string="Formulario - Encuesta">
                    
                    <group string="M贸dulo 1 - Caracterizaci贸n del Propietario ">
                        <group>
                            <field name="partner_name" />
                            <field name="contact_name" />                            
                            <field name="doctype" />
                            <field name="xidentification" />
                            <field name="x_sexo" />
                            <field name="x_etnia" />
                            <field name="x_edad" />                                     
                            <field name="state_id"/> 
                            <field name="xcity"/>
                        </group>

                        <group>                            
                            <field name="x_vereda" />
                            <field name="mobile" />
                            <field name="email_from" />
                            <field name="x_limitacion" />
                            <field name="x_escolaridad" />

                            <field name="x_pregrado"
                                   options="{'no_open': True}"
                                   attrs="{'readonly':[('x_escolaridad', '=', '34')],
                                   'invisible':[('x_pregrado', '=', False)],}"        
                                   />

                            <field name="x_pregrado"
                                   options="{'no_open': True}"
                                   attrs="{'readonly':[('x_escolaridad', '=', '30')],
                                   'invisible':[('x_pregrado', '=', True)],}"        
                                   />

                            <field name="x_posgrado"
                                   options="{'no_open': True}"
                                   attrs="{'readonly':[('x_escolaridad', '=', '35')],
                                   'invisible':[('x_posgrado', '=', False)],}"        
                                   />

                            <field name="x_posgrado"
                                   options="{'no_open': True}"
                                   attrs="{'readonly':[('x_escolaridad', '=', '30')],
                                   'invisible':[('x_posgrado', '=', False)],}"        
                                   />

                            <field name="x_otro"
                                   options="{'no_open': True}"
                                   attrs="{'readonly':[('x_escolaridad', '=', '36')],
                                   'invisible':[('x_otro', '=', False)],}"        
                                   />


                            <field name="x_grupos" />
                            <field name="x_estrato" />
                        </group>
                    </group>

                    <group string="M贸dulo 2 - Caracterizaci贸n del Micronegocio">
                        <group>
                            <field name="x_situacion" />
                            <field name="x_actcomer" /> 
                            <field name="x_state_id" />                         
                                                  
                        </group>

                    </group>
                   
                </page>
            </xpath>
        </field>
    </record>
</odoo>